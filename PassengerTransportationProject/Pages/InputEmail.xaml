<Page x:Class="PassengerTransportationProject.Pages.InputEmail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PassengerTransportationProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="90" d:DesignWidth="300"
      Title="InputEmail">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Введите вашу почту для ответа разработчика"></TextBlock>
            <TextBox x:Name="InputType" Width="220" Margin="10"></TextBox>
            <Button x:Name="InputButton" Width="100" Click="InputButton_Click">Далее</Button>
        </StackPanel>
    </Grid>
</Page>
